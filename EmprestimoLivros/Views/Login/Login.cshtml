@using EmprestimoLivros.DTO
@model UsuarioLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutDeslogado";
}

<div class="text-center mb-5">
    <h1>@ViewData["Title"]</h1>
</div>

@Html.Partial("_Alerts")

<form asp-action="Login" asp-controller="Login" method="POST">
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input asp-for="Email" type="email" class="form-control" id="email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" id="password">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary w-25 m-1">Entrar</button>
        <a asp-action="Registrar" asp-controller="Login" class="btn w-25 border m-1">Cadastrar-se</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}