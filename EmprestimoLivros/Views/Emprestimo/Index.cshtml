@model IEnumerable<Emprestimo>
@{
    ViewData["Title"] = "Empréstimos";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <h1>@ViewData["Title"]</h1>
    <a asp-controller="Emprestimo" asp-action="Cadastrar" class="btn btn-success">Cadastrar novo empréstimo</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livro</th>
            <th scope="col">Última atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var emprestimo in Model)
            {
                <tr>
                    <th>@emprestimo.Recebedor</th>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.LivroEmprestado</td>
                    <td>@emprestimo.DataAtualizacao</td>
                    <td>
                        <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>