@model Emprestimo
@{
    ViewData["Title"] = "Edição de Empréstimos";
}

<div class="mb-5 text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<form method="POST" asp-controller="Emprestimo" asp-action="Editar" class="p-5 rounded-3 border">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="recebedor" class="form-label">Recebedor</label>
        <input type="text" asp-for="Recebedor" class="form-control" id="recebedor">
        <span asp-validation-for="Recebedor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="fornecedor" class="form-label">Fornecedor</label>
        <input type="text" asp-for="Fornecedor" class="form-control" id="fornecedor">
        <span asp-validation-for="Fornecedor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="livroEmprestado" class="form-label">Livro</label>
        <input type="text" asp-for="LivroEmprestado" class="form-control" id="livroEmprestado">
        <span asp-validation-for="LivroEmprestado" class="text-danger"></span>
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">Editar</button>
        <a asp-controller="Emprestimo" asp-action="Index" class="btn btn-primary w-50">Voltar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}